        <div class="container">
            <h1 class="text-center header mb-5 mt-5">AprendeEC</h1>

            <div class="row flex-column justify-content-around formBody p-5 my-5">
                <form action="/register" id="formaRegistro" method="POST">
                    <div class="row col-12">
                        <div class="col-12 col-sm-6">
                            <label  for="">Nombre de usuario</label>
                        </div>
                        <div class="col-12 col-sm-6 text-center">
                            <input name="userName" type="text" required id="nombreUsuario">
                        </div>
                    </div>
                    <div class="row col-12">
                        <div class="col-12 col-sm-6">
                            <label  for="">Contrase침a</label>
                        </div>
                        <div class="col-12 col-sm-6 text-center">
                            <input name="contrasena" type="text" required id="contrasena">
                        </div>
                    </div>
                    <div class="row col-12">
                        <div class="col-12 col-sm-6">
                            <label for="">Confirmar contrase침a</label>
                        </div>
                        <div class="col-12 col-sm-6 text-center">
                            <input name="contrasenaConfirm" type="text" required id="confirmacionContrasena">
                        </div>
                    </div>
                    <div class="row col-12">
                        <div class="col-12 col-sm-6">
                            <label for="">Correo Institucional</label>
                        </div>
                        <div class="row col-12 col-sm-6 text-center" id = "correoInput">
                            <input name="correo" class= "col-sm-8 col-12"  type="text" required id="correo">
                            <select name="correoDominio" id="opcionesDominio" class="browser-default custom-select col-sm-4 col-12">
                                <% for(let i=0; i<instituciones.length; i++){ %>
                                    <option><%= instituciones[i].dominio_correo %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="row col-12">
                        <div class="col-12 col-sm-6">
                            <label for="">Universidad/Instituto</label>
                        </div>
                        <div class="col-12 col-sm-6 text-center" >
                            <select name="universityId" class="browser-default custom-select" id="universityNames">
                                <option value="-1">Ninguno</option>
                                <% for(let i=0; i<instituciones.length; i++){ %>
                                    <option value="<%= instituciones[i].id %>"><%= instituciones[i].nombre %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="row col-12">
                        <div class="col-12 col-sm-6">
                            <label for="">Acerca de ti</label>
                        </div>
                        <div class="col-12 col-sm-6 text-center">
                            <textarea rows="8" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="row col-12">
                        <div class="col-12 col-sm-6">
                            <label for="">Redes Sociales</label>
                        </div>
                        <div class="col-12 col-sm-6 text-center">
                            <div class="row flex-column justify-content-center align-items-center mt-1">
                                <div class="col-sm-12 mb-1 ">
                                    <a href="https://www.facebook.com/tuckerbudzyn" type="button" class="btn btn-block botonRedSocial"><i class="fab fa-google"></i></a>
                                </div>
                                <div class="col-sm-12 mb-1 ">
                                    <a href="https://www.facebook.com/tuckerbudzyn" type="button" class="btn btn-block botonRedSocial"><i class="fab fa-google"></i></a>
                                </div>
                                <div class="col-sm-12 mb-1">
                                    <a href="https://www.facebook.com/tuckerbudzyn" type="button" class="btn btn-block botonRedSocial"><i class="fab fa-google"></i></a>
                                </div>
                                <div class="col-sm-12 mb-1">
                                    <a href="https://www.facebook.com/tuckerbudzyn" type="button" class="btn btn-block botonRedSocial"><i class="fab fa-google"></i></a>
                                </div>
                                <div class="col-sm-12">
                                    <a href="https://www.facebook.com/tuckerbudzyn" type="button" class="btn rounded-circle botonRedSocial text-center"><i class="fas fa-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <input type="checkbox" required id="aceptar">
                        <label for="">Aceptar Terminos y condiciones</label>
                    </div>
                    <div class="col-12 row justify-content-end">
                        <div class="mr-3">
                            <button class="btn btn-primary" type="submit" form="formaRegistro" id="btnAceptar">Aceptar</button>
                        </div>
                        <div class="mr-3">
                            <button class="btn btn-primary" id="btnBorrarCampos">Borrar Campos</button>
                        </div>
                    </div> 
                </form>
            </div>
        </div>


        
    
